<style is:global>
    :root {
        /* Font families. */
        --font-family-sans: "IBM Plex Sans", sans-serif;
        --font-family-serif: "IBM Plex Serif", serif;

        /* https://www.fluid-type-scale.com/ */
        --font-size-sm: clamp(0.75rem, 1.06vw + 0.49rem, 1.33rem);
--font-size-base: clamp(1rem, 1.82vw + 0.55rem, 2rem);
--font-size-md: clamp(1.33rem, 3.03vw + 0.58rem, 3rem);
--font-size-lg: clamp(1.78rem, 4.95vw + 0.54rem, 4.5rem);
--font-size-xl: clamp(2.37rem, 7.97vw + 0.38rem, 6.75rem);
--font-size-xxl: clamp(3.16rem, 12.67vw + -0.01rem, 10.13rem);
        
        /* Line heights. */
        --line-height-sm: 1.25;
        --line-height-md: 1.5;
        
        /* Letter spacings. */
        --letter-spacing-sm: 0.05em;
        --letter-spacing-md: 0.1em;
    }
    /** Fonts **/
    body {
        font-family: var(--font-family-sans);
    }
    
    /** Sizing **/
    html {
        font-size: 16px;
    }
    
    /* Display - XXXL */
    h1, .display {
        font-size: var(--font-size-xxl);
    }

    /* Title - XXL */
    h2, .title {
        font-size: var(--font-size-xl);
    }
    
    /* Heading - XL */
    h3, .heading {
        font-size: var(--font-size-lg);
    }

    /* Subheading - L */
    h4, .subheading {
        font-size: var(--font-size-md);
    }

    /* Body Text - Base */
    body, p, .body-text {
        font-size: var(--font-size-base);
    }

    /* Small - S */
    small, figcaption, .small-text {
        font-size: var(--font-size-sm);
    }

    /** Modifiers **/
    /* ALL CAPS */
    .all-caps { text-transform: uppercase; }
    
    /* Emphasis */
    .emphasis { font-style: italic; }
    .serif { font-family: var(--font-family-serif); }

    /* Weight */
    .thin-weight { font-weight: 100; }
    .medium-weight { font-weight: 500; }
    .bold-weight { font-weight: 700; }
    .black-weight { font-weight: 900; }

</style>