---
import "@fontsource/inter/variable.css";
---
<style is:global>
    :root {
        /* Font families. */
        --font-family-sans: "InterVariable", sans-serif;
        --font-family-serif: "Noto Sans Serif", serif;

        /* https://www.fluid-type-scale.com/ */
        --font-size-sm: clamp(0.6rem, 0.44vw + 0.49rem, 0.84rem);
        --font-size-base: clamp(0.75rem, 0.68vw + 0.58rem, 1.13rem);
        --font-size-md: clamp(0.94rem, 1.02vw + 0.68rem, 1.5rem);
        --font-size-lg: clamp(1.17rem, 1.5vw + 0.8rem, 2rem);
        --font-size-xl: clamp(1.46rem, 2.18vw + 0.92rem, 2.66rem);
        --font-size-xxl: clamp(1.83rem, 3.13vw + 1.05rem, 3.55rem);
        --font-size-xxxl: clamp(2.29rem, 4.45vw + 1.18rem, 4.73rem);
        
        /* Line heights. */
        --line-height-sm: 1.25;
        --line-height-md: 1.5;
        --line-height-lg: 1.75;
        --line-height-xl: 2;
        
        /* Letter spacings. */
        --letter-spacing-sm: 0.05rem;
        --letter-spacing-md: 0.1rem;
        --letter-spacing-lg: 0.1rem;
        --letter-spacing-xl: 0.1rem;
    }
    /** Fonts **/
    body {
        font-family: var(--font-family-sans);
    }
    
    /** Sizing **/
    html {
        font-size: 16px;
    }
    
    /* Display - XXL */
    h1, .display {
        font-size: var(--font-size-xxl);
    }

    /* Title - XL */
    h2, .title {
        font-size: var(--font-size-xl);
    }
    
    /* Heading - L */
    h3, .heading {
        font-size: var(--font-size-lg);
    }

    /* Subheading - M */
    h4, .subheading {
        font-size: var(--font-size-md);
    }

    /* Body Text - Base */
    body, p, .body-text {
        font-size: var(--font-size-base);
    }

    /* Small - S */
    small, figcaption, .small-text {
        font-size: var(--font-size-sm);
    }
    
    /* Emphasis */
    .emphasis { font-style: italic; }
    .serif { font-family: var(--font-family-serif); }

    /* Weight */
    .thin-weight { 
        font-weight: 100;
        font-variation-settings: "wght" 100; 
    }
    .light-weight {
        font-weight: 300;
        font-variation-settings: "wght" 300;
    }
    .base-weight {
        font-weight: 400;
        font-variation-settings: "wght" 400;
    }
    .medium-weight {
        font-weight: 500;
        font-variation-settings: "wght" 500;
    }
    .bold-weight {
        font-weight: 700;
        font-variation-settings: "wght" 700;
    }
    .black-weight {
        font-weight: 900;
        font-variation-settings: "wght" 900;
    }

</style>